<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:calculator="clr-namespace:Calculator">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Calculator.Styling;component/Themes/Generic.xaml" />
        <ResourceDictionary>
            <Style TargetType="{x:Type calculator:ShellWindow}" BasedOn="{StaticResource StandardStyle}" x:Key="ShellWindowStyle">
                <Style.Setters>
                    <Setter Property="Icon" Value="Assets/Square44x44Logo.scale-200.png" />
                    <Setter Property="Title" Value="Calculator" />
                    <Setter Property="Height" Value="800" />
                    <Setter Property="Width" Value="800" />
                    <Setter Property="MinHeight" Value="600" />
                    <Setter Property="MinWidth" Value="640" />
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>