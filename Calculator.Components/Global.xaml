<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator.Components">
    <ControlTemplate x:Key="FractionTemplate" TargetType="local:Fraction">
        <Grid BorderBrush="Red" BorderThickness="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ContentPresenter Grid.Column="0" Grid.Row="0" Content="{TemplateBinding Numerator}" />
            <Border Grid.Column="0" Grid.Row="1" Height="1" Margin="2" Background="Black" />
            <ContentPresenter Grid.Column="0" Grid.Row="2" Content="{TemplateBinding Denominator}" />
        </Grid>
    </ControlTemplate>
</ResourceDictionary>
