<UserControl
    x:Class="Calculator.Components.Fraction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" 
    d:DesignWidth="400" 
    DataContext="{Binding}">
    <StackPanel BorderBrush="Red" BorderThickness="0">
        <ContentPresenter Content="{Binding Numerator}" />
        <Border Height="1" Margin="2" Background="Black" />
        <ContentPresenter Content="{Binding Denominator}" />
    </StackPanel>
</UserControl>