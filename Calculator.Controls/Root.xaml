<UserControl x:Class="Calculator.Controls.Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="This" Template="{DynamicResource RootTemplate}">
    <UserControl.Resources>
        <ControlTemplate x:Key="RootTemplate" TargetType="local:Root">
            <AdornerDecorator>
                <Canvas DataContext="{Binding ElementName=This}">
                    <ContentPresenter Content="{TemplateBinding Index}" RenderTransform="{Binding IndexTransform}" />
                    <Polyline Points="{TemplateBinding Points}" StrokeEndLineCap="Flat" StrokeLineJoin="Round" Stroke="Black" StrokeThickness="1" />
                    <ContentPresenter Content="{TemplateBinding Content}" Canvas.Left="{Binding ContentX}" Canvas.Top="{Binding ContentY}" />
                </Canvas>
            </AdornerDecorator>
        </ControlTemplate>
    </UserControl.Resources>
</UserControl>