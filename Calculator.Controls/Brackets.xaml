<UserControl x:Class="Calculator.Controls.Brackets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="This" Template="{DynamicResource BracketsTemplate}">
    <UserControl.Resources>
        <ControlTemplate x:Key="BracketsTemplate" TargetType="local:Brackets">
            <AdornerDecorator>
                <Canvas DataContext="{Binding ElementName=This}" Background="AliceBlue">
                    <ContentPresenter Content="{Binding Left}" Canvas.Left="{Binding LeftX}" RenderTransform="{Binding LeftTransform}" />
                    <ContentPresenter Content="{Binding Content}" Canvas.Left="{Binding ContentX}" />
                    <ContentPresenter Content="{Binding Right}" Canvas.Left="{Binding RightX}" RenderTransform="{Binding RightTransform}" />
                </Canvas>
            </AdornerDecorator>
        </ControlTemplate>
    </UserControl.Resources>
</UserControl>
