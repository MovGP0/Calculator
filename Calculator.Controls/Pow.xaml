<UserControl x:Class="Calculator.Controls.Pow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="This" Template="{DynamicResource PowTemplate}">
    <UserControl.Resources>
        <ControlTemplate x:Key="PowTemplate" TargetType="local:Pow">
            <AdornerDecorator>
                <Canvas DataContext="{Binding ElementName=This}">
                    <ContentPresenter Content="{Binding Exponent}" Canvas.Left="{Binding ExponentX}" RenderTransform="{Binding ExponentTransform}" />
                    <ContentPresenter Content="{Binding Content}" Canvas.Top="{Binding ContentY}" />
                </Canvas>
            </AdornerDecorator>
        </ControlTemplate>
    </UserControl.Resources>
</UserControl>
